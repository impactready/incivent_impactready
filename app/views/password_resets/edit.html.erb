<div class="spacer">
</div>

<div class="heading-block">
  <h2>Reset password: Step 2</h2>
</div>

<div class="spacer">
</div>

<div class="general-form">
	<%= semantic_form_for(:user, :url => password_reset_path(params[:id]), :html => { :method => 'PUT' }) do |f| %>
	  <%= f.inputs do %>
	    <%= f.input :password %>
	    <%= f.input :password_confirmation %>
	  <% end %>
    <%= f.actions do %>
      <%= f.action :submit, as: :button, label: 'Update Password' %>
    <% end %>
  <% end %>
</div>
