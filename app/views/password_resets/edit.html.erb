<div class="spacer">
</div>

<div class="heading-block">
  <h2>Reset Password - Step 1</h2>
</div>

<div class="spacer">
</div>

<div class="general-form">
	<%= semantic_form_for(:user, :url => password_reset_path(params[:id]), :html => { :method => 'PUT' }) do |f| %>
	  <%= f.inputs do %>
	    <%= f.input :password %>
	    <%= f.input :password_confirmation %>
	  <% end %>
	  <%= f.buttons do %>
        <%= f.commit_button :label => "Update Password" %>
    <% end %>
  <% end %>
</div>
