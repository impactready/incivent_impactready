<div class="spacer">
</div>

<div class="heading-block">
  <h2>Details</h2>
</div>

<div class="spacer">
</div>

<div class="item-table">
  <table>
      <tr class="listing-item">
        <td class="listing-i-fl"><strong>Number of users:</strong></td>
        <td><%= @account.users.count %></td>
      </tr>
      <tr class="listing-item">
        <td class="listing-i-fl"><strong>Number of groups:</strong></td>
        <td><%= @account.groups.count %></td>
      </tr>
  </table>
</div>

<div class="spacer">
</div>

<div class="item-table">
  <table>
    <tr class="listing-header">
      <td class="listing-i-fl"><strong>Team name</strong></td>
      <td><strong>Number of events</strong></td>
      <td><strong>Number of tasks</strong></td>
      <td><strong>Number of stories</strong></td>
    </tr>
    <% @account.groups.each do |group| %>
      <tr class="listing-item">
        <td class="listing-i-fl"><%= group.name %>:</td>
        <td><%= group.incivents.count %></td>
        <td><%= group.tasks.count %></td>
        <td><%= group.stories.count %></td>
      </tr>
    <% end %>
  </table>
</div>




<div class="spacer">
</div>

<div class="heading-block">
  <h2>Account Administration</h2>
</div>

<div>
  <div class="admin-column">

    <%= render 'accounts/account_plan' %>
    <p class="normal"><%= link_to "Edit your account", edit_account_path(@account) %></p>
    <p class="normal"><%= link_to "Close your account", @account, method: :delete, data: {confirm: "You sure you want to remove your profile?"} %></p>
  </div>

  <div class="admin-column">
    <p class="normal"><strong>Event Classification</strong></p>
    <p class="normal"><%= link_to "Manage priority options", priorities_path %></p>
    <p class="normal"><%= link_to "Manage types", types_path %></p>
    <p class="normal"><%= link_to "Manage statuses", statuses_path %></p>
    <p class="normal"><%= link_to "Manage indicators", indicators_path %></p>
  </div>

  <div class="admin-column">
    <p class="normal"><strong>Additional Users</strong></p>
    <p class="normal"><%= link_to "Invite a user to this account", new_invitation_path(account_id: current_user.account.id) %></p>
  </div>
  <br class="clear"/>

</div>

<div class="spacer">
</div>
