<div class="index-wrapper">
  <div class="index-listing">
    <div class="item-table">
      <table>
        <tr class="listing-header">
          <td class="listing-i-i">Characteristic</td>
          <td>Value</td>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Description:</td>
          <td><%= @measurement.description %></td>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Raised by:</td>
          <% if current_user?(@measurement.user) %>
            <td>You</td>
          <% else %>
            <td><%= @measurement.user.full_name %></td>
          <% end %>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Raised:</td>
          <td><%= time_ago_in_words(@measurement.created_at) %> ago</td>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Type:</td>
          <td><%= @measurement.type.description %></td>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Location:</td>
          <% if @measurement.location == "" %>
            <td>Unnamed Coordinates</td>
          <% else %>
            <td><%= @measurement.location %></td>
          <% end %>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Group:</td>
          <td><%= @measurement.group.name %></td>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Coordinates - Latitude:</td>
          <td><%= @measurement.latitude %></td>
        </tr>
        <tr class="listing-item">
          <td class="listing-i-i">Coordinates - Longitude:</td>
          <td><%= @measurement.longitude %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="index-item-image">
    <div class="general-form">
      <% if @measurement.image %>
        <a href="#"><strong>View Image</strong>
          <div>
            <%= image_tag @measurement.measurement_image.url(:medium), class: "photo" %>
          </div>
        </a>
      <% else %>
        <strong>No image attached</strong>
      <% end %>
    </div>
  </div>

</div>
