<%= semantic_form_for @measurement, html: {multipart: true} do |f| %>
  <%= f.inputs do %>
    <%= f.input :description %>
    <%= f.input :location, hint: "You must enter either an address OR latitude and longitude as decimal degrees" %>
    <%= f.input :type, collection: @account.types.where(usage: Type::USAGES[:measurement_indicator]), member_label: :description, include_blank: false %>
    <%= f.input :group, collection: current_user.groups, member_label: :name, include_blank: false %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :measurement_image, as: :file, label: "Event image" %>
    <%= f.input :archive, label: "Archive this event" %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, as: :button, label: 'Submit' %>
  <% end %>
<% end %>