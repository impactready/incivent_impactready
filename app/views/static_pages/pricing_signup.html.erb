<% content_for :head do -%>
  <%= stylesheet_link_tag 'static_pages.css' %>
<% end %>

<div class="spacer">
</div>

<div class="heading-block">
  <h2>Signup</h2>
</div>

<div class="spacer">
</div>

<div class="general-form">
	<div class="pricing">
		<h3 class="center">
			<br />
			<strong>The ImpactReady application is currently for closed beta users only.</strong>
			<br /><br />
			Please contact us using the button below if you would like to obtain access.
			<br /></br />
		</h3>
		<div class="large_button_container">
			<%= semantic_form_for :account, method: :get, url: contact_path, class: 'button_large' do |f| %>
				<%= f.inputs do %>
					<%= f.input :new_account, input_html: {value: true}, as: :hidden  %>
				<% end %>
			  	<%= f.actions do %>
			    	<%= f.action :submit, as: :button, label: 'New account' %>
			  	<% end %>
			<% end %>
		</div>
		<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
	</div>
</div>
