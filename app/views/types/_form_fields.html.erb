<%= semantic_form_for(@type) do |f| %>
  <%= f.inputs do %>
    <%= f.input :description %>
    <%= f.input :account_id, as: :hidden %>
    <%= f.input :usage, collection: Type::USAGES.values %>
  <% end%>
  <%= f.actions do %>
    <%= f.action :submit, as: :button, label: 'Submit' %>
  <% end %>
<% end %>
