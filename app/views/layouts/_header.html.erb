<header>

  <div class="above-header">
    <div class="container">
      <% if signed_in? %>
        <div class="top-name">
          Hello <strong><%= current_user.first_name %>!</strong>
        </div>
      <% end %>
      <nav class="top-menu">
          <ul>
              <% if signed_in? %>
                  <li><%= link_to "Support", contact_path %></li>
                  <li><%= link_to "Sign out", signout_path, method: :delete %></li>
              <% else %>
                  <li><%= link_to "Home", '/' %></li>
                  <li><%= link_to "Pricing/Signup", pricing_path %></li>
                  <li><%= link_to "Contact us", contact_path %></li>
                  <li><%= link_to "Sign in", signin_path %></li>
              <% end %>
          </ul>
      </nav>
      <br class="clear"/>
    </div>
  </div>

  <div class="header-main">
    <div class="container">
      <div class="main-page-image">
          <%= image_tag("HeaderLogo.png", alt: "Incivent") %>
      </div>
    </div>
  </div>
  <% if signed_in? %>
    <div class="header-info">
      <div class="container">
        <div class="main-page-user_info">
          Account: <strong><%= current_user.account.name %></strong>
        </div>

        <nav class="main-menu">
            <ul>
                <% if signed_in? %>
                  <li><%= link_to "Dashboard", groups_path %></li>
                  <li><%= link_to "Events", incivents_path %></li>
                  <li><%= link_to "Tasks", tasks_path %></li>
                  <li><%= link_to "Stories", stories_path %></li>
                  <% if current_user.master_user? %>
                    <li><%= link_to "Users", users_path %></li>
                  <% else %>
                    <li><%= link_to "Fellow members", users_path %></li>
                  <% end %>
                  <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
                  <% if current_user.master_user? %>
                    <li><%= link_to "Account management", current_user.account %></li>
                  <% end %>
                <% end %>
            </ul>
        </nav>
        <br class="clear"/>
      </div>
    </div>
  <% end %>

</header>