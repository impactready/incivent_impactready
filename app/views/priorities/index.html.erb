<div class="spacer">
</div>

<div class="heading-block">
  <h2>Priority options</h2>
</div>

<div class="spacer">
</div>

<p class="normal">
  <%= link_to 'New priority option', new_priority_path %>
</p>

<% if @priorities.count == 0 %>

  <div class="general-form">
    <p class="normal">You have not set up any priorities yet.</p>
  </div>

<% else %>

  <div class="item-table">
    <table>
      <tr class="listing-header">
        <td class="listing-i-fm">Description:</td>
        <td></td>
        <td></td>
      </tr>
      <% @priorities.each do |priority| %>
        <tr class="listing-item">
          <td class="listing-i-fm"><%= priority.description %></td>
          <td><%= link_to 'Edit', edit_priority_path(priority) %></td>
          <td><%= link_to 'Delete', priority, data: {confirm: 'Are you sure?'}, method: :delete %></td>
        </tr>
      <% end %>
    </table>

  </div>

<% end %>
