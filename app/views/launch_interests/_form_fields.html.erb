<%= semantic_form_for @launch_interest do |f| %>
  <%= f.inputs do %>
  	<% if signed_in? %>
  		<%= f.input :email_address, input_html: {value: current_user.email}, :as => :hidden %>
      <%= f.input :subject, input_html: {value: "Support"}, :as => :hidden %>
    <% else %>
      <% if @new_account %>
        <%= f.input :subject, input_html: {value: "New Account Request"}, :as => :hidden %>
      <% else %>
        <%= f.input :subject, input_html: {value: "Enquiry"}, :as => :hidden %>
      <% end %>
    	<%= f.input :email_address, :label => "Contact Email" %>
    <% end %>
    <%= f.input :message, :label => "Message" %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, as: :button, label: 'Submit' %>
  <% end %>
<% end %>