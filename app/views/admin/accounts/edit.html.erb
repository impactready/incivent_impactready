<div class="spacer">
</div>

<div class="heading-block">
  <h2>Edit account</h2>
</div>

<div class="spacer">
</div>

<div class="general-form">
  <%= semantic_form_for @account, url: admin_account_path(@account), method: :put do |f| %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :account_option, include_blank: false %>
      <%= f.input :active, as: :select %>
      <%= f.input :payment_active, as: :select %>
    <% end %>
    <%= f.actions %>
  <% end %>

</div>