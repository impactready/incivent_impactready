<%= semantic_form_for @user do |f| %>

  <%= f.inputs do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone, :label => "Phone number", :hint => "With international code for SMS functionality.", :placeholder => "Eg. 12335557867" %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button :label => "Submit" %>
  <% end %>
<% end %>
  