<div class="mobile-heading-block">
    <h2>New Message</h2>
</div>
<div class="mobile-form">
  <%= semantic_form_for @message do |f| %>
    <%= f.inputs do %>
      <%= f.input :description %>
      <%= f.input :location %>
      <%= f.input :group, :collection => current_user.groups, :member_label => :name, :include_blank => false %>
      <%= f.input :latitude %>
      <%= f.input :longitude %>
      <%= f.input :user_id, :as => :hidden %>
    <% end %>
    <%= f.buttons do %>
      <%= f.commit_button :label => "Submit" %>
    <% end %>
  <% end %>
</div>