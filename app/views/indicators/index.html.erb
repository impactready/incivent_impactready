<div class="spacer">
</div>

<div class="heading-block">
  <h2>Indicator options</h2>
</div>

<div class="spacer">
</div>

<p class="normal">
  <%= link_to 'New indicator', new_indicator_path %>
</p>

<% if @indicators.count == 0 %>

  <div class="general-form">
    <p class="normal">You have not set up any indicators yet.</p>
  </div>

<% else %>

  <div class="item-table">
    <table>
      <tr class="listing-header">
        <td class="listing-i-fm">Description:</td>
        <td></td>
        <td></td>
      </tr>
      <% @indicators.each do |indicator| %>
        <tr class="listing-item">
          <td class="listing-i-fm"><%= indicator.description %></td>
          <td><%= link_to 'Edit', edit_indicator_path(indicator) %></td>
          <td><%= link_to 'Delete', indicator, data: {confirm: 'Are you sure?'}, method: :delete %></td>
        </tr>
      <% end %>
    </table>

  </div>
<% end %>

